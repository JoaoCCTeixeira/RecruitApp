<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Lead__c</field>
        <field>Vacancy__c</field>
        <field>Meeting_Stage__c</field>
        <field>Status__c</field>
        <field>Candidacy_State__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>stepOne</label>
        <name>stepOne</name>
    </approvalStep>
    <emailTemplate>unfiled$public/SalesforceSchedulerModifyApptEmailTemplate</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Candidacy__c.Candidacy_State__c</field>
            <operation>equals</operation>
            <value>Aprovado</value>
        </criteriaItems>
        <criteriaItems>
            <field>Candidacy__c.Meeting_Stage__c</field>
            <operation>equals</operation>
            <value>Reunião pendente</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Reuniao_Confirmada</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reunioes</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Alterar_Reuniao</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Criar_Reuniao</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Reuniao_Pendente</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reunioes_Pendentes</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Reunião Confirmada/Recusada</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
